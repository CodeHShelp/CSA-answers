import java.util.Scanner;

public class HelloRunner {
    public static void main(String[] args) {
        // Create a Scanner object
        Scanner input = new Scanner(System.in);
        System.out.print("Please enter your name: ");
        String name = input.nextLine();
        input.close();

        // Call methods from the Hello class (assuming Hello class exists)
        Hello.english(name); // Call the English greeting method
        Hello.french(name);  // Call the French greeting method
        Hello.spanish(name); // Call the Spanish greeting method
    }
}
