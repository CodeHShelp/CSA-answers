public class Averages {
    public static void main(String[] args) {
        System.out.println("Average of 5.0 and 10.0: " + calculateAverage(5.0, 10.0));
        System.out.println("Average of 2.0, 4.0, and 6.0: " + calculateAverage(2.0, 4.0, 6.0));
        System.out.println("Average of 1.0, 2.0, 3.0, and 4.0: " + calculateAverage(1.0, 2.0, 3.0, 4.0));
    }

    public static double calculateAverage(double a, double b) {
        return (a + b) / 2.0;
    }

    public static double calculateAverage(double a, double b, double c) {
        return (a + b + c) / 3.0;
    }

    public static double calculateAverage(double a, double b, double c, double d) {
        return (a + b + c + d) / 4.0;
    }
}
